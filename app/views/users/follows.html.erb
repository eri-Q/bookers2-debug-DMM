<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>Follow Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
              <td><%= user.name %></td>
              <td>
                <p class="text-small">
                  フォロー数: <%= link_to follows_user_path(user) do %>
                              <%= @following_users.count %></h6>
                              <% end %>
                  フォロワー数: <%= link_to followers_user_path(user) do %>
                                <%= @follower_users.count %>
                                <% end %>
                </p>
              </td>
              <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>